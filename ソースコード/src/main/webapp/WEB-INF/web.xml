	<filter-mapping>
		<filter-name>GetCotextFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AddHeaderFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>OneTimeTokenFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>OneTimeTokenCheckFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/Main</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/UserUpdate</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/BookRegister</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/Individual</url-pattern>
	</filter-mapping>
	
